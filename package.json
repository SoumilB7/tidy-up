{
  "name": "tidy-up",
  "displayName": "Tidy Up - Comment Cleaner",
  "description": "Remove all AI comments from your code files with a single keybind. Supports multiple languages and preserves important comments marked with $.",
  "version": "1.0.3",
  "publisher": "SoumilB7",
  "author": "SoumilB7",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Formatters"
  ],
  "keywords": [
    "comments",
    "cleaner",
    "formatter",
    "code cleanup",
    "tidy",
    "remove comments",
    "python",
    "javascript",
    "typescript"
  ],
  "activationEvents": [
    "onCommand:tidy-up.removeComments"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tidy-up.removeComments",
        "title": "Tidy Up - Remove Comments",
        "category": "Tidy Up",
        "icon": "$(clean)"
      }
    ],
    "keybindings": [
      {
        "command": "tidy-up.removeComments",
        "key": "ctrl+alt+t",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "tidy-up.removeComments",
          "group": "1_modification",
          "when": "editorTextFocus"
        }
      ],
      "commandPalette": [
        {
          "command": "tidy-up.removeComments",
          "when": "editorTextFocus"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SoumilB7/tidy-up.git"
  },
  "homepage": "https://github.com/SoumilB7/tidy-up#readme",
  "bugs": {
    "url": "https://github.com/SoumilB7/tidy-up/issues"
  },
  "license": "MIT",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#2C3E50",
    "theme": "dark"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4",
    "@vscode/vsce": "^2.22.0"
  }
}
